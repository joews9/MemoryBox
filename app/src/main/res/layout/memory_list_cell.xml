<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:background="#ffffff"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layoutMainContent"

        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/title_item"
        android:layout_marginTop="10dp"
        android:text="Quick Memory"
        android:textSize="25dp"
        android:textColor="#8cc63f"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/date_item"
        android:text="Wednesday 7th November 2015"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="Walsall"
        android:textColor="#000000"
        android:id="@+id/location_item"
        android:textSize="15dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Click to see more..."
        android:id="@+id/see_more_item"
        android:textColor="#000000"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/iv_memory"
        android:layout_alignBottom="@+id/layoutMainContent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="25dp"
        android:layout_marginEnd="25dp" />
</RelativeLayout>