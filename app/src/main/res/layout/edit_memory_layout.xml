<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:text="Edit this Memory"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#9acc55"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9acc55"
        android:text="Date"/>

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:hint="Tap to add date"
        android:id="@+id/edit_memory_date"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9acc55"
        android:text="Title"/>

    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:id="@+id/edit_memory_title"
        android:hint="Add a title"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9acc55"
        android:text="Description"/>
    <EditText
        android:layout_marginLeft="10dp"
        android:id="@+id/edit_memory_description"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:hint="Add a description"
        android:gravity="top"
        android:layout_height="60dp" />
    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#9acc55"
        android:text="Location"/>
    <EditText
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/edit_memory_location"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:hint="Add a location"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Add Photo to Memory"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="50dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:layout_width="50dp"
            android:background="@drawable/camera"
            android:layout_gravity="center"
            android:id="@+id/btnCamera"
            android:layout_height="50dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:text="Choose a category?"
        android:layout_marginLeft="10dp"
        android:textColor="#9acc55"
        android:layout_height="wrap_content" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:id="@+id/edit_spinnerCat"
        android:entries="@array/spinnerCategorys"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:text="Save Memory"
            android:id="@+id/btnEditMemory"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:text="Cancel"
            android:id="@+id/btnCancelEdit"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>
